<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="${relativePackage}.${activityClass}"
    android:layout_gravity="center"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/fondo"
        android:layout_centerHorizontal="true" >
	</RelativeLayout>

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:gravity="right"
       android:padding="10dp" 
       android:layout_centerHorizontal="true">

       <TableLayout
           android:id="@+id/tableLayout1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/gestures"
           android:layout_alignTop="@+id/gestures" >

           <TableRow
               android:id="@+id/tableRow1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="#ffffff" >

               <TextView
                   android:id="@+id/text_fb"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="@string/ams_fb_text0"
                   android:textColor="#111111"
                   android:width="250dp" />

               <ImageView
                   android:id="@+id/gato_fb"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_launcher" />
           </TableRow>
       </TableLayout>

     

       <ImageView
           android:id="@+id/sardina"
           android:layout_width="80dp"
           android:layout_height="71dp"
           android:layout_above="@+id/cofre_abierto"
           android:layout_marginBottom="20dp"
           android:layout_centerHorizontal="true"
           android:src="@drawable/sardina"
           android:visibility="invisible" />
       
         <ImageView
           android:id="@+id/cofre_abierto"
           android:layout_width="200dp"
           android:layout_height="220dp"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           android:src="@drawable/cofre_abierto"
           android:visibility="invisible" />
            
          <ImageView
              android:id="@+id/cerradura"
              android:layout_width="59dp"
              android:layout_height="49dp"
             
              android:layout_alignTop="@+id/cofre_cerrado"
              android:layout_marginTop="74dp"
              android:layout_marginLeft="102dp"
              android:src="@drawable/cerradura"
              android:visibility="gone" />
          
            <ImageView
              android:id="@+id/cerradura2"
              android:layout_width="59dp"
              android:layout_height="49dp"     
              android:layout_alignTop="@+id/cofre_cerrado"
              android:layout_marginTop="37dp"
              android:layout_marginLeft="135dp"
              android:src="@drawable/cerradura"
              android:visibility="gone" />
         
          
          <ImageView
           android:id="@+id/cofre_cerrado"
           android:layout_width="240dp"
           android:layout_height="200dp"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           android:paddingBottom="30dp"
           android:src="@drawable/cofre_cerrado0"
           android:visibility="visible" />

         
   </RelativeLayout>

</RelativeLayout>
