<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="${relativePackage}.${activityClass}"
    android:layout_gravity="center"
    android:gravity="center" 
    android:id="@+id/root_layout">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/fondo"
        android:layout_centerHorizontal="true" >
	</RelativeLayout>

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:gravity="right"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:paddingTop="10dp"
       android:paddingBottom="60dp" >

       <TableLayout
           android:id="@+id/tableLayout1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:gravity="center" >

           <TableRow
               android:id="@+id/tableRow1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:background="@drawable/border_table"
               android:gravity="center" >

               <TextView
                   android:id="@+id/text_fb"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:gravity="center"
                   android:text="@string/agv_fb_text"
                   android:textColor="#111111"
                   android:width="250dp" />

               <ImageView
                   android:id="@+id/gato_fb"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_marginRight="5dp"
                   android:contentDescription="@string/image_description"
                   android:src="@drawable/ic_launcher" />

           </TableRow>
       </TableLayout>
   
     

       <ImageView
           android:id="@+id/sardina"
           android:layout_width="80dp"
           android:layout_height="71dp"
           android:layout_above="@+id/cofre_abierto"
           android:layout_marginBottom="20dp"
           android:layout_centerHorizontal="true"
           android:src="@drawable/sardina"
           android:visibility="invisible" />
       
         <ImageView
           android:id="@+id/cofre_abierto"
           android:layout_width="200dp"
           android:layout_height="220dp"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           android:src="@drawable/cofre_abierto"
           android:visibility="invisible" />
            
          
         
          
          <ImageView
           android:id="@+id/cofre_cerrado"
           android:layout_width="240dp"
           android:layout_height="200dp"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           android:paddingBottom="30dp"
           android:src="@drawable/cofre_cerrado"
           android:visibility="visible" />
          
           <ImageView
           android:id="@+id/cerradura"
           android:layout_width="145dp"
           android:layout_height="145dp"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           android:paddingBottom="84dp"
           android:src="@drawable/cerradura0"
           android:visibility="visible" />

         
   </RelativeLayout>

</RelativeLayout>
